<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/yes_no_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="35dp"
        android:fontFamily="@font/helvetica_neue_nedium"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/splashscreen_light"
        android:text=""
        />

    <RadioGroup
        android:id="@+id/choices_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yes_no_question"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/helvetica_neue_nedium"
        android:orientation="horizontal">

    </RadioGroup>

    <TextView
        android:id="@+id/option_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choices_list"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/helvetica_neue_nedium"
        android:text= ""/>

    <Button
        android:text="@string/next_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/next_button"
        android:fontFamily="@font/helvetica_neue_nedium"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>