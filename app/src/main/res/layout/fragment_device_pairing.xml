<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridView
        android:id="@+id/device_pairing_layout"
        android:layout_width="165dp"
        android:layout_height="25dp"
        android:layout_marginTop="7dp"
        android:numColumns="3"
        android:layout_centerHorizontal="true"
       >

    </GridView>

    <TextView
        android:id="@+id/session_duration"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:layout_height="25dp"
        android:drawablePadding="4dp"
        android:textSize="15dp"
        android:textColor="@color/splashscreen_light"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/ic_session_duration"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:text="00:00"/>

    <TextView
        android:id="@+id/device_scan_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:textSize="15dp"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="@string/seizure_monitoring"
        android:background="@color/splashscreen_light"
        />

    <Button
        android:id="@+id/device_pairing_button"
        android:layout_width="165dp"
        android:layout_height="25dp"
        android:layout_marginTop="7dp"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="@color/splashscreen_dark"
        android:background="@color/grey"
        android:layout_centerHorizontal="true"
        android:text="@string/device_pairing_button"
        android:visibility="gone"/>

</RelativeLayout>
